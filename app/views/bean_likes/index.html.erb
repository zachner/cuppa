<div class="page-header">
  <h1>
    Bean likes
    <a href="/bean_likes/new" class="btn btn-lg btn-success">New Bean like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Bean</th>
        <th>Actions</th>
      </tr>

      <% @bean_likes.each do |bean_like| %>
      <tr>
        <td>
          <% if bean_like.user.present? %>
            <a href="/users/<%= bean_like.user.id %>">
              <%= bean_like.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bean_like.bean.present? %>
            <a href="/beans/<%= bean_like.bean.id %>">
              <%= bean_like.bean.bean %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/bean_likes/<%= bean_like.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == bean_like.user %>
            <a href="/bean_likes/<%= bean_like.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bean_like/<%= bean_like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bean_likes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
