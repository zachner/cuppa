<div class="page-header">
  <h1>
    Beans
    <a href="/beans/new" class="btn btn-lg btn-success">New Bean</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bean</th>
        <th>Roaster</th>
        <th>Actions</th>
      </tr>

      <% @beans.each do |bean| %>
      <tr>
        <td><%= bean.bean %></td>
        <td><%= bean.roaster.roaster %></td>
        <td>
          <a href="/beans/<%= bean.id %>" class="btn btn-primary">Show</a>
          <a href="/beans/<%= bean.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bean/<%= bean.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @beans, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
