<!-- Validation failure messages -->
<% if @roaster.errors.any? %>
  <% @roaster.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Roaster #<%= @roaster.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_roaster/<%= @roaster.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for roaster -->
      <div class="form-group">
        <label for="roaster" class="control-label">
          Roaster
        </label>

        <input type="text" id="roaster" name="roaster" placeholder="Roaster" class="form-control" value="<%= @roaster.roaster %>">
      </div>

      <button class="btn btn-warning">
        Update Roaster
      </button>
      or
      <a href="/roasters/<%= @roaster.id %>">Cancel</a>
    </form>
  </div>
</div>
