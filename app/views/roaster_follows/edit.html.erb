<!-- Validation failure messages -->
<% if @roaster_follow.errors.any? %>
  <% @roaster_follow.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Roaster Follow #<%= @roaster_follow.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_roaster_follow/<%= @roaster_follow.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for roaster_id -->
      <div class="form-group">
        <label for="roaster_id" class="control-label">
          Roaster
        </label>

        <%= select_tag(:roaster_id, options_from_collection_for_select(Roaster.all, :id, :roaster, @roaster_follow.roaster_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Roaster Follow
      </button>
      or
      <a href="/roaster_follows/<%= @roaster_follow.id %>">Cancel</a>
    </form>
  </div>
</div>
