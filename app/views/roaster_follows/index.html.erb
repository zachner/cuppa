<div class="page-header">
  <h1>
    Roaster follows
    <a href="/roaster_follows/new" class="btn btn-lg btn-success">New Roaster follow</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Roaster</th>
        <th>Actions</th>
      </tr>

      <% @roaster_follows.each do |roaster_follow| %>
      <tr>
        <td>
          <% if roaster_follow.user.present? %>
            <a href="/users/<%= roaster_follow.user.id %>">
              <%= roaster_follow.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if roaster_follow.roaster.present? %>
            <a href="/roasters/<%= roaster_follow.roaster.id %>">
              <%= roaster_follow.roaster.roaster %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/roaster_follows/<%= roaster_follow.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == roaster_follow.user %>
            <a href="/roaster_follows/<%= roaster_follow.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_roaster_follow/<%= roaster_follow.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @roaster_follows, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
